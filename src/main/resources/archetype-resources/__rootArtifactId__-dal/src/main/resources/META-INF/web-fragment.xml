<web-fragment version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-fragment_3_0.xsd">

    <servlet>
        <servlet-name>druidStat</servlet-name>
        <servlet-class>com.alibaba.druid.support.http.StatViewServlet</servlet-class>
        <init-param>
            <param-name>loginUsername</param-name>
            <param-value>druid</param-value>
        </init-param>
        <init-param>
            <param-name>loginPassword</param-name>
            <param-value>druid</param-value>
        </init-param>
        <init-param>
            <param-name>allow</param-name>
            <param-value>0::1,127.0.0.1</param-value>
        </init-param>
        <init-param>
            <param-name>deny</param-name>
            <param-value></param-value>
        </init-param>
        <init-param>
            <param-name>resetEnabled</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>jmxUrl</param-name>
            <param-value></param-value>
        </init-param>
        <init-param>
            <param-name>jmxUsername</param-name>
            <param-value></param-value>
        </init-param>
        <init-param>
            <param-name>jmxPassword</param-name>
            <param-value></param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>druidStat</servlet-name>
        <url-pattern>/druid/*</url-pattern>
    </servlet-mapping>
</web-fragment>