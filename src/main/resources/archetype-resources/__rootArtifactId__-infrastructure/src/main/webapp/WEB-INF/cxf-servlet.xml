<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jaxws="http://cxf.apache.org/jaxws"
       xmlns:jaxrs="http://cxf.apache.org/jaxrs"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                            http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd
                            http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd">
    <import resource="classpath:META-INF/cxf/cxf.xml"/>
    <import resource="classpath:META-INF/cxf/cxf-servlet.xml"/>

#if($showComment)
    <!-- http://localhost:8080/${cxf.path}/rpc?wsdl -->
#end
    <jaxws:endpoint id="generic" implementor="${package}.service.GenericServiceImpl" address="/rpc">
        <jaxws:features>
            <bean class="org.apache.cxf.feature.LoggingFeature"/>
        </jaxws:features>
    </jaxws:endpoint>
#if($showComment)
    <!-- curl -G http://localhost:8080/${cxf.path}/test/echo -->
#end
    <bean id="echo" class="${package}.service.EchoServiceImpl" />
    <jaxrs:server>
        <jaxrs:serviceBeans>
            <ref bean="echo" />
        </jaxrs:serviceBeans>
    </jaxrs:server>

</beans>